<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/galwithbag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="LEAVE REQUEST FORM:"
                android:textAppearance="@android:style/TextAppearance" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnStatus"
                    android:layout_width="166dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:text="Leave Status" />

                <Button
                    android:id="@+id/btnAutoFillForm"
                    android:layout_width="166dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:text="AutoFill " />

            </LinearLayout>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter your Name"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />


            <EditText
                android:id="@+id/etBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter your Branch"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etRollNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Enter your Registration no."
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etRoomNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Enter your Room no."
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Enter your Phone no."
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etGuardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Enter your Guardian Phone no."
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Enter your Reason"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Enter your Destination Address"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Date of leave with time:" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etLeaveDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="dd/mm/yy"
                    android:inputType="date"
                    android:padding="3dp"
                    android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

                <EditText
                    android:id="@+id/etLeaveTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="hh:mm AM/PM"
                    android:padding="3dp"
                    android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Date of return with time:" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etReturnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="dd/mm/yy "
                android:inputType="date"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

            <EditText
                android:id="@+id/etReturnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="hh:mm AM/PM"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Mode of Travel:" />

            <EditText
                android:id="@+id/etTravelMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Train/Bus/Car"
                android:padding="3dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>